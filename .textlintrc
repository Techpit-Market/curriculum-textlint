{
  "rules": {
    // 技術文書向けのtextlintルールプリセット
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": {     // 感嘆符
        "allowFullWidthExclamation": true,  // 全角の「！」を使えるようにする
      }
    },
    // WEB+DB PRESS表記ルール
    "textlint-rule-spellcheck-tech-word": true,
    "prh": {
      "rulePaths" :[
        "rules.yml"
      ]
    }
  }
}
